<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<meta name="description" content="">
		<meta name="author" content="Rik van der Heijden">
		<title>Dionysus</title>
		{{ stylesheet('assets/css/bootstrap.min.css') }}
		{{ stylesheet('assets/css/style.css') }}
		{{ stylesheets() }}

		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
</head>
<body>
	{% include "navbar.inc.html.twig" %}
	<div class="main-wrap">
	<div class="container-fluid">
		<form class="form-inline">
			<div class="row row-bottom-padding-5">
				<div class="col-sm-12">
					<div class="btn-group btn-group-justified" role="group">
						<div class="btn-group" role="group">
							<button type="button" class="btn btn-default" disabled="disabled">Operations</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn-oper-shift-left btn btn-default">&laquo; Shift left</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn-oper-invert btn btn-default">Invert</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn-oper-reverse btn btn-default">Reverse</button>
						</div>
						<!-- div class="btn-group" role="group">
							<button type="button" class="btn btn-default">Endian swap</button>
						</div -->
						<div class="btn-group" role="group">
							<button type="button" class="btn-oper-all-zero btn btn-default">All zero</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn-oper-all-one btn btn-default">All one</button>
						</div>
						<div class="btn-group" role="group">
							<button type="button" class="btn-oper-shift-right btn btn-default">Shift right &raquo;</button>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-2">
					<div class="form-group">
						<label class="sr-only" for="hexInput">Hex</label>
						<div class="input-group">
							<div class="input-group-addon">Hex</div>
							<input type="text" class="form-control" id="hexInput" pattern="[0-9A-Fa-f]" placeholder="0xDEADBEEF">
						</div>
					</div>
				</div>
				<div class="col-sm-2">
					<div class="form-group">
						<label class="sr-only" for="decInput">Dec</label>
						<div class="input-group">
							<div class="input-group-addon">Dec</div>
							<input type="text" class="form-control" id="decInput" pattern="[0-9]" placeholder="3735928559">
						</div>
					</div>
				</div>
				<div class="col-sm-2">
					<div class="form-group">
						<label class="sr-only" for="octInput">Oct</label>
						<div class="input-group">
							<div class="input-group-addon">Oct</div>
							<input type="text" class="form-control" id="octInput" pattern="[0-7]" placeholder="3735928559">
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label class="sr-only" for="binInput">Bin</label>
						<div class="input-group">
							<div class="input-group-addon">Bin</div>
							<input type="text" class="form-control" id="binInput" pattern="[01]" placeholder="11011110101011011011111011101111">
							<div class="input-group-addon 1-count">24</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-3 bit-64b">
					{% for i in 63..56 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
				<div class="col-sm-3 bit-64b">
					{% for i in 55..48 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
				<div class="col-sm-3 bit-64b">
					{% for i in 47..40 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
				<div class="col-sm-3 bit-64b">
					{% for i in 39..32 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="row">
				<div class="col-sm-3 bit-64b bit-32b">
					{% for i in 31..24 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
				<div class="col-sm-3 bit-64b bit-32b">
					{% for i in 23..16 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
				<div class="col-sm-3 bit-64b bit-32b bit-16b">
					{% for i in 15..8 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
				<div class="col-sm-3 bit-64b bit-32b bit-16b bit-8b">
					{% for i in 7..0 %}
						<div class="col-xs-1-8">
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}-hdr" disabled="disabled">{{ i }}</button><br />
							<button type="button" class="btn-bit btn btn-default bit-{{ i }}">0</button><br />
						</div>
					{% endfor %}
				</div>
			</div>
		</form>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<h2>Grouping</h2>
				<div class="form-group">
					<textarea class="form-control" rows="6" id="bit-grouping-cfg">
[
  { "name" : "g1", "bit" : "0-3", "color" : "#ff00ff" },
  { "name" : "g2", "bit" : "4-7", "color" : "#aabbcc" }, 
  { "name" : "g3", "bit" : "24-27", "color" : "#11ff00" },
  { "name" : "g4", "bit" : "31-31", "color" : "#ff0000" }
]
					</textarea>
					<button type="button" class="btn-bit-grouping">Group</button><br />
				</div>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<h2>ASCII-to-hex</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-3">
				<div class="form-group">
					<label class="" for="ath-asciiInput">Text (ASCII)</label>
					<textarea class="form-control" rows="6" id="ath-asciiInput"></textarea>
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label class="" for="ath-hexInput">Hexadecimal</label>
					<textarea class="form-control" rows="6" id="ath-hexInput"></textarea>
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label class="" for="ath-binInput">Binary</label>
					<textarea class="form-control" rows="6" id="ath-binInput" disabled="disabled"></textarea>
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label class="" for="ath-decInput">Decimal</label>
					<textarea class="form-control" rows="6" id="ath-decInput" disabled="disabled"></textarea>
				</div>
			</div>
		</div>
	</div>
	</div>
	<footer class="footer">
		<div class="container">
			<p class="text-muted credit">
				&copy; 2016 Rik van der Heijden - Licensed under the <a href="license.html">MIT license</a> - <a href="https://github.com/rikvdh/dionysus" target="blank">Github</a>
			</p>
		</div>
	</div>
	<script src="assets/js/jquery-1.11.2.min.js"></script>
	<script src="assets/js/bootstrap.min.js"></script>
	<script src="assets/js/bignum.js"></script>
	<script src="assets/js/script.js"></script>
	<script src="assets/js/ath.js"></script>
</body>
</html>
